###
#   Local Network Configurations
HS_WANIF={{ lan_iface }}            # WAN Interface toward the Internet
HS_LANIF={{ wifi_cwp_iface }}            # Subscriber Interface for client devices
HS_NETWORK={{ uam_network | ansible.netcommon.ipaddr('network') }}      # HotSpot Network (must include HS_UAMLISTEN)
HS_NETMASK={{ uam_network | ansible.netcommon.ipaddr('netmask') }}   # HotSpot Network Netmask
HS_UAMLISTEN={{ uam_listener | ansible.netcommon.ipaddr('address') }}    # HotSpot IP Address (on subscriber network)
HS_UAMPORT=3990            # HotSpot UAM Port (on subscriber network)
HS_UAMUIPORT=4990          # HotSpot UAM "UI" Port (on subscriber network, for embedded portal)


# OpenDNS Servers
HS_DNS1={{ wifi_cwp_ipaddr | ansible.netcommon.ipaddr('address') }}         # Set this to be the HotSpot IP Address if dnsmasq or BIND is running locally, otherwise use other DNS server
HS_DNS2={{ nameservers[0] }}


###
#   HotSpot settings for simple Captive Portal
HS_NASID=nas01			# NAS ID
HS_RADIUS=127.0.0.1		# FreeRadius server
HS_RADIUS2=::1		# FreeRadius server

HS_UAMALLOW={{ uam_network }}

HS_RADSECRET={{ radius_password }}    	# Set to be your RADIUS shared secret
HS_UAMSECRET={{ uam_secret }}    	# Set to be your UAM secret


###
#   Firewall issues
#   
#   Uncomment the following to add ports to the allowed local ports list
#   The up.sh script will allow these local ports to be used, while the default
#   is to block all unwanted traffic to the tun/tap. 
HS_TCP_PORTS="80 443"


###
#   Standard configurations
HS_ADMUSR=coovachillispot
HS_ADMPWD=coovachillispot


HS_UAMFORMAT=http://\$HS_UAMLISTEN/hotspotlogin.php
HS_UAMHOMEPAGE=http://\$HS_UAMLISTEN:\$HS_UAMPORT/prelogin